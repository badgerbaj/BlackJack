<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toddbray.blackjack">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="B &amp; T CASINO: BLACKJACK"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait" android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_bet" android:screenOrientation="portrait" android:noHistory="true"/>
        <activity android:name=".activity_game" android:screenOrientation="portrait" android:noHistory="true"/>
    </application>

</manifest>